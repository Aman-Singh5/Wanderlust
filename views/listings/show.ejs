<% layout("/layouts/boilerplate") -%>

  <body>
    <div class="row">
      <div class="col-8 offset-2 p-5">
        <h3>Listing Details :</h3>

        <div class="card" style="width: 100%;">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="..."
            style="width: 100%; height: 40vh; object-fit: cover;">
          <div class="card-body">
            <p class="card-text">
            <ul>
              <li>
                <%= listing.title %>
              </li>
              <li>
                <%= listing.description %>
              </li>
              <li>&#8377; <%= listing.price.toLocaleString("en-IN") %>
              </li>
              <li>
                <%= listing.location %>
              </li>
              <li>
                <%= listing.country %>
              </li>
            </ul>
            </p>
          </div>
        </div>

        <br />
        <div class="row">
          <div class="col-6">
            <div class="text-start">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-success">Edit this Listing</a>
            </div>
          </div>

          <div class="col-6 justify-content-end">
            <div class="text-end">
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button class="btn btn-danger">Delete this listing</button>
            </form>
          </div>
          </div>
      </div>
      </div>

      <hr />
      <!-- Review Section -->

      <div class=" p-5">
        <h4>Leave a review</h4>
        <Form method="POST" action="/listings/<%= listing._id %>/reviews">
          <div class="my-4">
            <lable for="rating" class="form-label">Rating</lable>
            <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]" />
          </div>
          <div class="my-4">
            <lable for="comment" class="form-label">Comment</lable>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          </div>
          <button type="Submit" class="btn btn-outline-dark">Submit</button>
        </Form>

        <hr />
        <div>
          <h4>All Reviews</h4>

          <div class="row row-cols-lg-2">
            <% for(review of listing.reviews) { %>
              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <div class="col-12 mb-4">
                  <div class="card">
                    <h5 class="card-header">
                      <%= review.rating %> stars
                    </h5>
                    <div class="card-body d-flex justify-content-between">
                      <!-- <h5 class="card-title"><%= review.rating %> stars</h5> -->
                      <p class="card-text">
                        <%= review.comment %>
                      </p>
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                  </div>
                </div>
              </form>
              <% } %>
          </div>



        </div>
      </div>
    </div>

  </body>