<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        <h4 class="col-6 offset-3 mb-4">Create new listing</h4>
        <div class="col-6 offset-3">
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="username" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter the title" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please choose a title.</div>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Description</label>
                    <input name="listing[description]" placeholder="Enter the description" type="text"
                        class="form-control" required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please choose a description.</div>
                </div>

                <!-- <div class="mb-3">
                    <label for="username" class="form-label">Upload Image</label>
                    <input name="listing[image][url]" placeholder="Enter the image url" type="text"
                        class="form-control" />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please choose a image url.</div>
                </div> -->

                <div class="mb-3">
                    <label for="username" class="form-label">Image url</label>
                    <input name="listing[image]"  type="file"
                        class="form-control" />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please choose a image url.</div>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="Enter the price" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please choose a price.</div>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter the location" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please choose a location.</div>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="Enter the country" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please choose a country.</div>
                </div>

                <button type="submit" class="btn btn-success"> Submit the details</button>
            </form>

        </div>
    </div>