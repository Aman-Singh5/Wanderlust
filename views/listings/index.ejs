<% layout("/layouts/boilerplate") -%>

<body>
    <h3>All Listings</h3>

    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->
    <div class="row justify-content-between row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xs-1">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>"  style="margin-bottom: 2rem;">
          <div class="card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="width: 100%; height: 15rem;">
            <div class="card-body">
              <p class="card-text"><%= listing.title %></p>
              <p class="card-text"><%= listing.price %></p>
            </div>
          </div>
        </a>

        <% } %>
    </div>

</body>
